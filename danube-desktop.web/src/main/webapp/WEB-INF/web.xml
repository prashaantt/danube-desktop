<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
      version="3.0"> 

	<!-- GENERAL INFORMATION -->

	<display-name>danube-desktop.web</display-name>

	<!-- SPRING SERVLET -->

	<servlet>
		<servlet-name>DesktopSpringServlet</servlet-name>
		<servlet-class>danube.desktop.web.DesktopSpringServlet</servlet-class>
		<load-on-startup>20</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>DesktopSpringServlet</servlet-name>
		<url-pattern>/danube-desktop.web/*</url-pattern>
	</servlet-mapping>

	<!-- EXTERNAL CALL SERVLET -->

	<servlet>
		<servlet-name>ExternalCallServlet</servlet-name>
		<servlet-class>danube.desktop.web.servlet.external.ExternalCallServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ExternalCallServlet</servlet-name>
		<url-pattern>/external/*</url-pattern>
	</servlet-mapping>

	<!-- SECURITY -->

